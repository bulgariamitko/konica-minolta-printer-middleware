# Database Configuration
DATABASE_URL=sqlite:///./printer_middleware.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Authentication (for remote access)
API_KEY=your-secure-api-key-here
SECRET_KEY=your-secret-key-for-hmac-signatures

# Remote Communication
WEBHOOK_ENDPOINTS=https://your-server.com/webhook,https://backup-server.com/webhook
POLLING_ENDPOINTS=https://your-server.com/api/jobs,https://your-server.com/api/commands
REMOTE_API_KEY=your-remote-server-api-key
REMOTE_SECRET_KEY=your-remote-server-secret-key

# Device Discovery (these are now optional - devices will be auto-discovered)
# PRINTER_C654E_IP=192.168.1.200
# PRINTER_C654E_PASSWORD=1234567812345678
# PRINTER_C759_IP=192.168.1.210
# PRINTER_C754E_IP=192.168.1.220
# PRINTER_KM2100_IP=192.168.1.131

# SNMP Configuration
SNMP_COMMUNITY=public
SNMP_VERSION=2c

# Job Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/middleware.log

# Network Discovery
DISCOVERY_NETWORK=192.168.1.0/24
DISCOVERY_TIMEOUT=30